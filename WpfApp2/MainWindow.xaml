<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="Transparent" Grid.Row="0">
            <Button Click="Button_Click" Content="back" HorizontalAlignment="Right"/>
            <TextBlock Text="Hello" FontSize="25" Height="40" Margin="0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Background="Aqua" Grid.Row="1" Panel.ZIndex="-9">
            <Frame Name="MyFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
